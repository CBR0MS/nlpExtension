{
    "name": "NLP Extension",
    "version": "1.0",
    "description": "A NLP extension that shows the sentiment of a page and selection",
    "background": {
        "scripts": ["background-load-objects.js", "background.js"]
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "css": ["content.css"]
        }
    ],
    "options_page": "options.html",
    "browser_action": {
      "default_popup": "popup.html"
    },
    "permissions": [
        "tabs", 
        "contextMenus",
        "http://*/",
        "https://*/"
    ],
    "web_accessible_resources": ["popup-script.js", "content.js"],
    "manifest_version": 2
}