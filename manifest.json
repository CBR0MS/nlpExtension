{
    "name": "Sentitude Sentiment Analysis",
    "version": "1.0",
    "description": "A NLP extension that shows the sentiment of a page and selection",
    "background": {
        "scripts": ["scripts/background-load-objects.js", "scripts/porter-stemmer.js", "scripts/background.js"]
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["scripts/injected/content.js"],
            "css": ["scripts/injected/content.css"]
        }
    ],
    "options_page": "pages/options.html",
    "browser_action": {
      "default_popup": "pages/popup.html"
    },
    "permissions": [
        "storage",
        "tabs", 
        "contextMenus",
        "http://*/",
        "https://*/"
    ],
    "icons": {
        "128": "assets/icon128.png"
    },
    "manifest_version": 2
}